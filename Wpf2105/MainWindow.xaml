<Window x:Class="Wpf2105.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2105"
        xmlns:v="clr-namespace:Wpf2105.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ColorConverter x:Key="ColorConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <v:Class1/>
    </Window.DataContext>
    <Grid>
        <TextBox x:Name="Username1"
             Text="{Binding Username}"                 
             HorizontalAlignment="Left" Margin="192,133,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"  Grid.Column="1"/>
        <TextBox x:Name="Password1"
             Text="{Binding Password}" 
             HorizontalAlignment="Left" Margin="192,167,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"  Grid.Column="1"/>
        <Label Content="Форма входа" HorizontalAlignment="Left" Margin="192,93,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="107,129,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="107,163,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button Content="Войти"
                Command="{Binding LoginCommand}"
                HorizontalAlignment="Left" Margin="235,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.39,-0.579" Grid.Column="1"/>
        <Button x:Name="Success"     Content="{Binding StatusMessage}" HorizontalAlignment="Left" Margin="183,239,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.39,-0.579" Width="140" Grid.Column="1" 
                Background="{Binding  ElementName=Success, Path=Content,Converter={StaticResource ColorConverter}}"/>

    </Grid>
</Window>
