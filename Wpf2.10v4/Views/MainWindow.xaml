<Window x:Class="Wpf2._10v4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2._10v4"
        xmlns:vm="clr-namespace:Wpf2._10v4.ViewModel"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>

       <TextBox x:Name="Username1"
            Text="{Binding Username}"                 
             HorizontalAlignment="Left" Margin="192,133,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
       <!-- <TextBox x:Name="Password1"
             Text="{Binding Password}" 
             HorizontalAlignment="Left" Margin="192,167,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_1" Grid.Column="1"/>
        -->
        
        <Label Content="Форма входа" HorizontalAlignment="Left" Margin="192,93,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="107,129,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="107,163,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="235,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.39,-0.579" Grid.Column="1"/>
        <Button Content="Введите учетные данные" HorizontalAlignment="Left" Margin="183,239,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.39,-0.579" Width="140" Grid.Column="1"/>

    </Grid>
</Window>
