<Window x:Class="Wpf2._8v3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2._8v3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding product1}" Margin="20">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="500" Height="200" x:Name="FoodTemplate">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Контейнер для картинки в первой колонке -->
                        <Border x:Name="ImageBackground" Grid.Column="0" 

                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                            <Image Source="{Binding Image}" 
                            Width="Auto"
                       Height="Auto"
                       Stretch="Uniform"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Margin="10"/>
                        </Border>

                        <!-- Контейнер для текста во второй колонке -->
                        <Border Grid.Column="1" 
                        x:Name="Background" 
                        Background="DarkBlue" 
                        Margin="0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding Price}" FontSize="16" Foreground="LightBlue"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Category}" Value="Food">
                            <Setter TargetName="Background" Property="Background" Value="Brown"/>
                            <Setter TargetName="ImageBackground" Property="Background" Value="Brown"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Category}" Value="technique">
                            <Setter TargetName="Background" Property="Background" Value="DarkGray"/>
                            <Setter TargetName="ImageBackground" Property="Background" Value="DarkGray"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
