<Window x:Class="Wpf2._7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2._7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="CheckBox" >
            <Setter Property="IsThreeState" Value="True"/>
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="Rectangle" RadiusX="3" RadiusY="3" Width="50" Height="50" Stroke="Black" 
                                       Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Fill="Transparent"/>
                            <TextBlock x:Name="Text" Grid.Row="1" Text="Текст" Grid.Column="0" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            <Ellipse x:Name="Ellipse" Grid.Row="0" Grid.Column="0" Width="25" Height="25" Stroke="#FF676767" 
                                     Panel.ZIndex="-2" Fill="#FF676767" Visibility="Collapsed"/>
                            <TextBlock x:Name="X" Grid.Row="0" Grid.Column="0" Text="X" FontSize="24" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>




                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="X" Property="Visibility" Value="Visible"/>
                                <Setter  TargetName="Ellipse"  Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="Text" Property="Text"   Value="Checked"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="X" Property="Visibility" Value="Hidden"/>
                                <Setter  TargetName="Ellipse"  Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="Text"  Property="Text"   Value="UnChecked"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="X" Property="Visibility" Value="Hidden"/>
                                <Setter  TargetName="Ellipse"  Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Text"  Property="Text"   Value="Indeterminate"/>
                            </Trigger>


                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>



    <Grid>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left"  VerticalAlignment="Center" UseLayoutRounding="False" Margin="45,0,0,0" />
        <CheckBox Content="CheckBox" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,0,45,0"/>

    </Grid>
</Window>
