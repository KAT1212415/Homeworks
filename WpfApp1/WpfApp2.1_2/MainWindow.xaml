            Name="Ellipse3"
            HorizontalAlignment="Center" 
            Height="100" 
            Margin="0,281,0,0"
            Stroke="Black" 
            VerticalAlignment="Top" 
            Width="100" Fill="#FF328512"/>
        <Button 
            Content="Button" 
            HorizontalAlignment="Center" 
            Margin="0,429,0,0"
            VerticalAlignment="Top"
            Height="37" Width="72" Click="Button_Click"/>
        <TextBlock 
            Name="Text1"
            HorizontalAlignment="Left" 
            Margin="214,435,0,0" 
            TextWrapping="Wrap" 
            Text="TextBlock" 
            VerticalAlignment="Top"/>

    </Grid>
