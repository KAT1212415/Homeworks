<Window x:Class="Wpf2._6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2._6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>


        <TextBox  x:Name="Text"      HorizontalAlignment="Left" Margin="80,61,0,0" TextWrapping="Wrap" Text="Введите текст здесь" VerticalAlignment="Top" Width="616"/>
        <CheckBox x:Name="CheckBox1"      Content="Показать детали" HorizontalAlignment="Left" Margin="80,94,0,0" VerticalAlignment="Top"/>
        <ProgressBar HorizontalAlignment="Left" 
                     Height="10" Margin="80,147,0,0"
                     VerticalAlignment="Top" Width="100" 
                     Visibility="{Binding ElementName=CheckBox1, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"                    
                     Value="{Binding ElementName=Text,Path=Text.Length, Mode=OneWay}"/>
        <TextBlock HorizontalAlignment="Left" Margin="80,114,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                  Text="{Binding ElementName=Text,Path=Text.Length}" />
      

    </Grid>
</Window>
