<Window x:Class="Wpf22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf22"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Открыть" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Click="Button_Click_1"/>
            <Button Grid.Column="1" Content="Сохранить как" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Click="Button_Click_2"/>
            <Button Grid.Column="2" Content="О программе" HorizontalAlignment="Center" Margin="0,5,0,5" Click="Button_Click" />
        </Grid>
        <TextBox x:Name="TextBox1" 
             Padding="5" 
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch" Margin="0,0,0,0"
             Grid.Row="1" TextWrapping="Wrap"
             Text=""  
             TextChanged="TextBox_TextChanged"
             />
        <TextBox 
        x:Name="TextBox2" Grid.Row="2"
        TextWrapping="Wrap" Text="  "
        VerticalAlignment="Center" HorizontalAlignment="Left" Width="794"/>




    </Grid>
</Window>
